<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="Record">
  
  	<select id="rec_cnt"  parameterType= "hashmap" resultType="String">
  		select count(*)
  		from tn_rec_files
  		where ins_date <![CDATA[<=]]> #{first_brcast_date} AND
  				ins_date <![CDATA[>=]]> #{last_brcast_date}
  	</select>
  	
  	<insert id="add_record">
  		INSERT INTO tn_rec_files
  		(
  			file_no
  			,usr_no
  			,file_path
  			,is_file_yn
  			,ins_date
  			,ins_time
  		)
  		VALUES 
  		(
  			"getFileNo"()
  			,#{usr_no}
  			,#{file_path}
  			,#{is_file_yn}
  			,TO_CHAR(current_timestamp,'YYYYMMDD')
  			,TO_CHAR(current_timestamp,'HH24MISS')
  		)
  	</insert>
  </mapper>